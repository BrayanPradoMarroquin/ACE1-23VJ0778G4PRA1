int aumentar = -4;
void setMatriz() {
  for (int i = 0; i < 8; i++)
    for (int j = 0; j < 16; j++) {
      if (MatrizFrase[i][(j + aumentar) % 110] == 1)
        buffer[i][j] = 1;
      else
        buffer[i][j] = 0;
    }
  if (aumentar >= 100) {
    for (int i = 0; i < 8; i++) {
      for (int j = 0; j < 110; j++)
        buffer[i][j] = 0;
    }
    aumentar = -4;
  }
  if (aumentar <= -5) {
    for (int i = 0; i < 8; i++) {
      for (int j = 0; j < 110; j++)
        buffer[i][j] = 0;
    }
    aumentar = 100;
  }
}

void mostrarMatriz() {
  // Con driver
  for (int i = 0; i < 8; i++)
    for (int j = 0; j < 8; j++)
      matriz.setLed(0, i, j, buffer[i][j] == 1 ? true : false);
  // Sin driver
  for (int k = 0; k < 3; k++)
    for (int i = 0; i < 8; i++)
      for (int j = 8; j < 16; j++)
        if (buffer[i][j] == 1)
          pintarLED(j - 8, i);
        else
          delayMicroseconds(50);
}
const unsigned long debounceDelay = 50;
int buttonState = LOW;
int lastButtonState = LOW;
unsigned long lastDebounceTime = 0;
int direccion = 1;
long int t0 = 0;
long int t1 = 0;
void loop() {
  int reading = digitalRead(13);
  t1 = millis();
  if ((t1 - t0) >= 150) {
    t0 = millis();
    aumentar = aumentar + direccion;
  }

  if (reading != lastButtonState) {
    lastDebounceTime = millis();
  }
  if ((millis() - lastDebounceTime) > debounceDelay) {
    if (reading != buttonState) {
      buttonState = reading;
      if (buttonState == HIGH) {
        if (direccion == 1) {
          direccion = -1;
        } else {
          direccion = 1;
        };
      }
    }
  }
  lastButtonState = reading;
  setMatriz();
  delay(2);
  mostrarMatriz();
  delay(1);
}
