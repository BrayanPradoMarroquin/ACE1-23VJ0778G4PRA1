        if (buffer[i][j] == 1)
          pintarLED(j - 8, i);
        else
          delayMicroseconds(50);
}

long int t0 = 0;
long int t1 = 0;

const unsigned long debounceDelay = 50;
int buttonState = LOW;
int lastButtonState = LOW;
unsigned long lastDebounceTime = 0;

int direccion = 1;

void loop() {
  int reading = digitalRead(13);

  t1 = millis();
  if ((t1 - t0) >= 150) {
    t0 = millis();
  }

  if (reading != lastButtonState) {
    lastDebounceTime = millis();
  }

  if ((millis() - lastDebounceTime) > debounceDelay) {
    if (reading != buttonState) {
      buttonState = reading;
      if (buttonState == HIGH) {
        if (direccion == 1){
          direccion = 0;
        }
        if (direccion == 0){
          direccion = 1;
        }
      }
    }
  }

  lastButtonState = reading;

  if (direccion == 1){
    setMatriz();
  }

  if (direccion == 0){
    setMatrizRtoL();
  }

  delay(2);
  mostrarMatriz();
  delay(1);
}